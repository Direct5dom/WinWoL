<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinWoL.Pages.WoL"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinWoL.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  定义 ScrollViewer 的样式  -->
        <Style x:Key="TransparentScrollViewerStyle" TargetType="ScrollViewer">
            <!--  设置背景为透明  -->
            <Setter Property="Background" Value="#11FFFFFF" />
            <!--  设置边框为透明  -->
            <Setter Property="BorderBrush" Value="Transparent" />
            <!--  设置边框厚度为0  -->
            <Setter Property="BorderThickness" Value="0" />
            <!--  设置圆角  -->
            <Setter Property="CornerRadius" Value="4" />
        </Style>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock
                        x:Name="Header"
                        x:Uid="WoLHeader"
                        HorizontalAlignment="Center"
                        FontSize="24" />

                    <ScrollViewer
                        Width="268"
                        Height="268"
                        Margin="0,8,0,0"
                        Style="{StaticResource TransparentScrollViewerStyle}">
                        <Grid>
                            <ListView
                                x:Name="dataListView"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="0,8,0,8">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Text="配置名称：" />
                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Text="{Binding Name}" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Text="延迟：" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Text="" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </ScrollViewer>

                    <StackPanel
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            x:Name="AddConfig"
                            x:Uid="AddConfig"
                            Width="84"
                            Margin="0,0,8,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Click="AddConfigButton_Click" />
                        <Button
                            x:Name="ChangeConfig"
                            x:Uid="ChangeConfig"
                            Width="84"
                            Margin="0,0,8,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Click="ChangeConfigButton_Click" />
                        <Button
                            x:Name="DelConfig"
                            x:Uid="DelConfig"
                            Width="84"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom">
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel>
                                        <TextBlock
                                            x:Uid="DelConfigConfirm"
                                            Margin="0,0,0,12"
                                            Style="{ThemeResource BaseTextBlockStyle}" />
                                        <Button x:Uid="Confirm" Click="DelConfigButton_Click" />
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                    <StackPanel
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            x:Name="WoLConfig"
                            x:Uid="WoLConfig"
                            Width="84"
                            Margin="0,0,8,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Click="WoLConfigButton_Click" />
                        <Button
                            x:Name="ShutdownConfig"
                            x:Uid="ShutdownConfig"
                            Width="84"
                            Margin="0,0,8,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom">
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel>
                                        <TextBlock
                                            x:Uid="ShutdownConfigConfirm"
                                            Margin="0,0,0,12"
                                            Style="{ThemeResource BaseTextBlockStyle}" />
                                        <Button x:Uid="Confirm" Click="ShutdownConfigButton_Click" />
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                        <Button
                            x:Name="RDPConfig"
                            x:Uid="RDPConfig"
                            Width="84"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Click="RDPConfigButton_Click" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <TeachingTip
            x:Name="NeedSelectedTips"
            x:Uid="NeedSelectedTips"
            IsLightDismissEnabled="True"
            PlacementMargin="20"
            PreferredPlacement="Auto" />
    </Grid>
</Page>
